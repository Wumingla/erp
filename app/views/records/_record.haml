%tr{class: record_color(record)}
  %td= "##{record.sno}"
  %td= record.time.to_s(:short)
  %td= link_to record.description, company_book_record_path(record.book.company, record.book, record)
  %td= record.amount
  %td= record.status.gsub(/_/, ' ').capitalize
  %td
    = link_to "Edit", edit_company_book_record_path(@company, @book, record),
      class: "btn btn-default btn-sm"
    = link_to "Delete", company_book_record_path(@company, @book, record),
      method: :delete, "data-confirm" => "Really want to delete record?",
      class: "btn btn-default btn-sm"
