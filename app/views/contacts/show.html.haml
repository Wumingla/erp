= render partial: "top_bar"

%p#notice= notice

%p
  %b Company:
  = @contact.company.name
%p
  %b Name:
  = @contact.name
%p
  %b Ph:
  = @contact.ph
%p
  %b Email:
  = @contact.email
%p
  %b Address:
  = @contact.address
%p
  %b City:
  = @contact.city
%p
  %b Zip:
  = @contact.zip
%p
