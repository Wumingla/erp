= form_for @doc do |f|
  - if @doc.errors.any?
    #error_explanation
      %h2= "#{pluralize(@doc.errors.count, "error")} prohibited this doc from being saved:"
      %ul
        - @doc.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :record
    = f.text_field :record
  .actions
    = f.submit 'Save'
